<odoo>
    <data>
        <record id="view_contact_wizard_form" model="ir.ui.view">
            <field name="name">contact.wizard.form</field>
            <field name="model">contact.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Select User and Project">
                    <group>
                        <field name="user_id"/>
                        <field name="project_id"/>
                    </group>
                    <footer>
                        <button string="Save" type="object" name="save"/>
                        <button string="Cancel" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="view_res_partner_form_inherit" model="ir.ui.view">
            <field name="name">res.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="open_contact_wizard" string="Select User and Project" type="object" class="btn-primary"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>