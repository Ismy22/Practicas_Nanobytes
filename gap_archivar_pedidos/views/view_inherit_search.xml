<odoo>
    <record id="sale_order_view_search_inherit_sale2" model="ir.ui.view">
        <field name="name">sale.order.search.inherit.sale2</field>
        <field name="model">sale.order</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <filter name="my_sale_orders_filter" position="after">
                <xpath expr="//filter[@name='filter_create_date']" position="before">
                    <filter string="Active" name="active_filter" domain="[('active', '=', 'False')]"/>
                </xpath>
            </filter>
        </field>
    </record>
</odoo>