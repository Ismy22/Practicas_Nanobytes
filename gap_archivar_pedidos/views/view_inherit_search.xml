<record id="sale_order_view_search_inherit_mio2" model="ir.ui.view">
        <field name="name">sale.order.search.inherit.mio2</field>
        <field name="model">sale.order</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <filter name="my_sale_orders_filter" position="after">
                <filter string="Active" name="active_filter" domain="[('active', '=', 'False')]"/>
                <filter string="No Active" name="unactive_filter" domain="[('active', '=', 'True')]"/>
            </filter>
        </field>
    </record>