<?xml version="1.0" encoding="utf-8"?>
<odoo>  

    <record id="view_res_user_wizard_form" model="ir.ui.view">
            <field name="name">res.user.wizard.form</field>
            <field name="model">res.user.wizard</field>
            <field name="arch" type="xml">
                <tree>
                    <group>
                        <field name="user"/>
                    </group>
                    <separator/>
                    <group>
                        <field name="project"/>
                    </group>
                    <footer>
                        <button string="Guardar" type="object" name="save_contact_wizard"/>
                        <button string="Cancelar" special="cancel"/>
                    </footer>
                </tree>
            </field>
        </record>

        <record id="res_partner_wizard_action" model="ir.actions.act_window">   
            <field name="name">Reasignar proyecto</field>   
            <field name="type">ir.actions.act_window</field>     
            <field name="res_model">res.user.wizard</field>  
            <field name="view_mode">form</field>   
            <field name="target">new</field>
        </record>

</odoo>