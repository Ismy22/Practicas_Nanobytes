<?xml version="1.0" encoding="utf-8"?>
<odoo>  
    <record id="res_user_wizard_form" model="ir.ui.view">
        <field name="name">res.user.wizard.form</field>
        <field name="model">res.user.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>           
                    <field name="user"/>            
                </group>         
                <group>           
                    <field name="project"/>            
                </group>         
            </form> 
        </field>
    </record>

    <record id="res_partner_wizard_action" model="ir.actions.act_window">   
        <field name="name">Reasignar proyecto</field>   
        <field name="type">ir.actions.act_window</field>     
        <field name="res_model">res.user.wizard</field>  
        <field name="view_mode">form</field>   
        <field name="view_id" ref="res_user_form"/>   
        <field name="target">new</field>
    </record>

</odoo>